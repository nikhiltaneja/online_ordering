                  <tr>
                      <th>Order #</th>

                      <th>Customer</th>

                      <th>Status</th>

                      <th>Order placed at</th>

                  </tr>
                  <% @orders.each do |order|  %>
                  <tr>
                      <td><%= order.id %></td>

                      <td>
                      
                        <% if order.user %>

                          <%= order.user.name %>
                        <% else %>
                          Customer has not logged in
                        <% end %>
                      </td>

                      <td><%= order.status %></td>

                      <td><%= order.updated_at.strftime('%m/%d/%Y') %></td>

