        </div>
      </div>
    </div><!-- /.row -->

    <div class="row">
      <div class="col-lg-3">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-comments fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading"><%= "#{@orders.count}" %></p>
                <p class="announcement-text"><%= "Total Orders Completed" %></p>
              </div>
            </div>
          </div>
          
            <div class="panel-footer announcement-bottom">
              <div class="row">
                <div class="col-xs-6">
                  <%= link_to "All Orders", admin_orders_path %>
                </div>
                <div class="col-xs-6 text-right">
                  <i class="fa fa-arrow-circle-right"></i>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-check fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading"><%= "#{@users.count}" %></p>
                <p class="announcement-text"><%= "Total Customers" %></p>
              </div>
            </div>
          </div>
          
            <div class="panel-footer announcement-bottom">
              <div class="row">
                <div class="col-xs-6">
                  <%= link_to "All Customers", customers_path %>
                </div>
                <div class="col-xs-6 text-right">
                  <i class="fa fa-arrow-circle-right"></i>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
